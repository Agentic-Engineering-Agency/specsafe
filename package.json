{
  "name": "specsafe",
  "version": "0.1.0",
  "description": "Test-Driven Development (TDD) framework designed for AI-assisted software engineering",
  "author": "Agentic Engineering",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "specsafe": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "keywords": [
    "tdd",
    "test-driven-development",
    "ai",
    "cli",
    "mcp",
    "claude-code",
    "opencode",
    "specification",
    "testing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AgenticEngineering/specsafe.git"
  },
  "bugs": {
    "url": "https://github.com/AgenticEngineering/specsafe/issues"
  },
  "homepage": "https://github.com/AgenticEngineering/specsafe#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1"
  }
}
