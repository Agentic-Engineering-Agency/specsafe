{
  "name": "specsafe",
  "version": "0.8.0",
  "description": "Test-Driven Development framework for AI-assisted software engineering",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.0"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}
